{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "paths": {
      "@common/*": [
        "./src/common/*"
      ],
      "@types": [
        "./src/types"
      ]
    }
  }
}
